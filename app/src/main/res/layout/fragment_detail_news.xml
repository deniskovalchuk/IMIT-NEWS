<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/standart_padding">

        <TextView
            style="@style/Text.DetailTitle"
            android:id="@+id/fragment_detail_title_text" />

        <TextView
            style="@style/Text.DetailTag"
            android:id="@+id/fragment_detail_tag_text" />

        <TextView
            style="@style/Text.DetailTitle"
            android:id="@+id/fragment_detail_date_text" />

        <TextView
            style="@style/Text.DetailContent"
            android:id="@+id/fragment_detail_content_text" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>